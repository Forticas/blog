{% extends 'base.html.twig' %}
{% set max_pages = count_posts/10 %}

{% block metas %}
    <title>{{ config.website.name }}</title>
    <meta name="description" content="">
    <meta name=”robots” content=”index, follow”>
    <meta property="og:type" content="article" />
    <meta property="og:title" content="TITLE OF YOUR POST OR PAGE" />
    <meta property="og:description" content="DESCRIPTION OF PAGE CONTENT" />
    <meta property="og:image" content="LINK TO THE IMAGE FILE" />
    <meta property="og:url" content="PERMALINK" />
    <meta property="og:site_name" content="SITE NAME" />
    <meta property="article:published_time" content="DATE OF POST" />
    <meta property="article:modified_time" content="DATE OF MODIFICATION" />
    <meta property="article:section" content="SECTION NAME" />
    <meta property="article:tag" content="TAG1, TAG2" />
    <meta property="fb:admins" content="USER ID" />
    <meta property="fb:app_id" content="APP ID" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@TWITTER USERNAME" />
    <meta name="twitter:title" content="TITLE OF YOUR POST OR PAGE" />
    <meta name="twitter:description" content="DESCRIPTION OF PAGE CONTENT" />
    <meta name="twitter:image" content="LINK TO THE IMAGE FILE" />
    <meta name="twitter:url" content="PERMALINK" />
    <meta name="twitter:domain" content="DOMAIN NAME" />
    <meta name="twitter:creator" content="@TWITTER USERNAME" />

{% endblock %}

{% block body %}

    <h1>Posts List</h1>
    {% for post in posts %}
        <div class="post">
            <h2>
                <a href="{{ path('show_post', {
                    'post_slug': post.slug,
                    'category_slug': "xxx"
                }) }}">{{ post.title }}</a>
            </h2>
            <p>
                {{ post.content }}
            </p>
            <p>
                <a href="{{ path('show_post', {
                    'post_slug': post.slug,
                    'category_slug': "xxx"
                }) }}">Read more...</a>
            </p>
        </div>
    {% else %}
        <p>No posts found.</p>
    {% endfor %}

    {% if max_pages > 1 %}
        <ul class="pagination">
            {% for page in 1..max_pages %}
                <li><a href="{{ path('app_default', {
                    'page': page
                }) }}">{{ page }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
